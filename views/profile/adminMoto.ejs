        /* ================================= */

        /* Full-width input fields */
        input[type=text],
        input[type=number],
        input[type=password] {
            width: 100%;
            padding: 12px 20px;
            margin: 8px 0;
            display: inline-block;
            border: 1px solid #ccc;
            box-sizing: border-box;
        }

        input[type=date] {
            width: 49%;
